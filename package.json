{
  "name": "frontend-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "lint:fix": "eslint . --ext ts --ext tsx --ext js --fix",
    "type-check": "tsc --pretty --noEmit",
    "codegen:graphql": "graphql-codegen",
    "format": "prettier --write .",
    "test:unit": "jest",
    "test:unit:w": "jest --watch",
    "test:unit:cover": "jest --coverage",
    "test:unit:cover:w": "jest --watch --coverage",
    "test:e2e": "./node_modules/.bin/cypress run",
    "test:e2e:open": "cypress open",
    "test:ci": "yarn test:all && yarn test:e2e",
    "qa": "yarn lint && yarn type-check && yarn test:unit",
    "qa:cover": "yarn lint && yarn type-check && yarn test:unit:cover && test:e2e"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "yarn test:all"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint",
      "yarn format"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "nyc": {
    "report-dir": "coverage-cypress"
  },
  "dependencies": {
    "@tailwindcss/ui": "^0.7.2",
    "autoprefixer": "^10.0.2",
    "classnames": "^2.2.6",
    "graphql": "^15.4.0",
    "next": "10.0.0",
    "postcss": "^8.1.10",
    "postcss-nesting": "^7.0.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "tailwindcss": "^2.0.1"
  },
  "devDependencies": {
    "@aws-amplify/cli": "^4.38.0",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@cypress/code-coverage": "^3.8.2",
    "@graphql-codegen/cli": "^1.19.1",
    "@graphql-codegen/typescript": "^1.17.11",
    "@graphql-codegen/typescript-operations": "^1.17.9",
    "@testing-library/dom": "^7.26.4",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/classnames": "^2.2.11",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.55",
    "@types/testing-library__jest-dom": "^5.9.5",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "babel-jest": "^26.6.1",
    "babel-plugin-istanbul": "^6.0.0",
    "cypress": "^5.5.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "graphql-tag": "^2.11.0",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "jest-transform-graphql": "^2.1.0",
    "lint-staged": "^10.5.1",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.1.2",
    "typescript": "^4.0.5"
  }
}
